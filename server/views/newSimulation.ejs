<%- include("header",{mode:'simulations'}) %>


<link rel="stylesheet" href="/styles/internet/roundslider.min.css">
<script src="/scripts/internet/roundslider.js"></script>




<div class="col-lg-12">
        <div class="page-header row no-gutters py-4">
                <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                    <span class="text-uppercase page-subtitle">Simulaciones</span>
                    <h3 class="page-title">Nueva Simulación</h3>
                </div>
            </div>
    <div class="card card-small mb-4">
        <div class="card-header border-bottom">
            <h6 class="m-0">Crear nueva simulación</h6>
        </div>

        <form action="/simulations/" method="post">
            <ul class="list-group list-group-flush">
                <li class="list-group-item p-3">

                    <div class="form-group ">
                        <label for="feFirstName">Nombre de la simulación</label>
                        <input type="text" class="form-control" placeholder="Nombre de la simulación" name="name">
                    </div>

                    <div class="form-group">
                        <label for="feInputState">Duracion</label>
                        <select name="duration" id="feInputState" class="form-control">
                            <option selected="">Duracion...</option>
                            <option value='1'>1 semana</option>
                            <option value='2'>2 semana</option>
                            <option value='3'>3 semanas</option>
                            <option value='4'>4 semanas</option>
                            <option value='5'>1 mes</option>
                        </select>
                    </div>
                    <div id="slider"></div>
                </li>
                <li class="list-group-item p-3" id="reportMenu">
                    <label for="feInputState">Reportes</label>
                    <div class="form-group">
                        <section class="section-preview">
                            <%for (var report of reports){%>

                            <div class="custom-control custom-checkbox mb-1">
                                <input type="checkbox" class="custom-control-input" id="<%=report.reportId%>"
                                    data-name="<%=report.name%>" value="<%=report.reportId%>">
                                <label class="custom-control-label" for=<%=report.reportId%>><%=report.name%></label>
                            </div>
                            <%}%>  
                                    </div>
                    </li>
                    <li class="list-group-item p-3">
                        <button type="submit" class="btn btn-accent">Crear Simulación</button>
                    </li>
            </ul>
        </form>
    </div>
</div>


    <script>
        $(document).ready(function () {
            var reports = <%-JSON.stringify(reports) %>

                $("input").change(function () {
                    var $input = $(this);

                    const reportId = $input.val();

                    const report = reports.find(individualReport => individualReport.reportId == reportId)

                    console.log(reports)
                    const reportName = $input.data('name');
                    const isChecked = $input.is(":checked")


                    if (isChecked) {

                        console.log(isChecked)

                        console.log(reportId)
                        console.log(reportName)
                        console.log(report.mediciones)
                        function generateCard(medicion) {

                            return ` 
                            <div class="col-md-6 col-xl-3 mb-4">
                                <div class="stats-small stats-small--1 card card-small p-2">
                                    <div class="card-body p-0 d-flex">
                                        <div class="d-flex flex-column m-auto">
                                            <div class="stats-small__data text-center">
                                                <span class="stats-small__label mb-2 text-uppercase">${medicion.nombreMedicion}</span>
                                            </div>
                                            <div id="slider-${medicion.idMedicion}"></div> 
                                            <div class="stats-small__data text-center">
                                                    <span class="page-subtitle">Horas</span>
                                            </div>                                            
                                        </div>
                                    </div>
                                </div>
                            </div>`


                        }


                        reportElement = '';
                        for (medicion of report.mediciones) {
                            reportElement += generateCard(medicion);
                        }

                        reportElement = `<li id="card-${reportId}"><div class="col-lg-12">
                                <input type="hidden" name="reportId" value="${reportId}">
                                <h4>${report.nombre}</h4>
                                <h6>Seleccione la cantidad de horas por día que utiliza cada uno de estos elementos</h6>
                            <div class='row'> ${reportElement}</div></div></li>`;


                        $("#reportMenu").after(reportElement);

                        $("#borrar-" + reportId).click(() => {
                            $("#card-" + reportId).remove();
                        });

                        for (medicion of report.mediciones) {
                            $(`#slider-${medicion.idMedicion}`).roundSlider({
                            sliderType: "min-range",
                            width: 22,
                            radius: 100,
                            value: 12,
                            max: "24",
                            circleShape: "half-top"
                        });
                        }
                    }
                    else {
                        $("#card-" + reportId).remove();
                    }
                });
        });


    </script>

