<%- include("header",{mode:'reports'}) %>

<div class="main-content-container container-fluid">

    <div class="d-flex justify-content-between">

        <div class="page-header no-gutters py-4">
            <div class="">
                <span class="text-uppercase page-subtitle">Listado de reportes</span>
                <h3 class="page-title">
                    Reportes
                </h3>
            </div>
        </div>

        <div class="page-header py-4"><a href='/reportes/new' class="btn btn-sm btn-primary" style='color:white'>+ Nuevo
                reporte</a></div>


    </div>


    <div class='row'>

        <div class='col-md-12'>
            <div class="card card-small">

                <div class="card-header border-bottom">
                    <h6 class="m-0">Listado de reportes</h6>
                </div>

                <div class="card-body pt-0 row">

                    <table class="table mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">Nombre</th>
                                <th scope="col" class="border-0">Fecha</th>
                                <th scope="col" class="border-0">Consumo Promedio</th>
                                <th scope="col" class="border-0">Consumo Maximo</th>
                                <th scope="col" class="border-0"></th>
                            </tr>
                        </thead>
                        <tbody>
                                <%for (var report of reports){%>
                                    <tr>
                                      <td>
                                          <a href="/reportes/<%=report.id%>/"><%=report.name%></a>
                                      
                                      </td>
                                      <td>
                                        <%=report.date%>
                                      </td>
                                      <td>
                                        <%=report.averagePower%>W
                                      </td>
                                      <td>
                                        <%=report.maximumPower%>W
                                      </td>
                                      <td>
                                        <button id="delete-<%=report.id%>" type="button" class="rounded"><i class="material-icons">delete</i></button>
                                      </td>
                                    </tr>
                                    <%}%>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
       

    </div>

    <% include footer.ejs %>