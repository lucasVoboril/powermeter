<div class="row">
  <div class="col-md-12">
    <div class="card card-small">
      <div class="card-header border-bottom">
        <h6 class="m-0">Detalle Simulación</h6>
      </div>

      <div class="card-body pt-0 row">
        <div class="card-body p-0 pb-3 text-center">
          <table class="table mb-0">
            <thead class="bg-light">
              <tr>
                <th scope="col" class="border-0">Nombre</th>
                <th scope="col" class="border-0">Porcentaje de Uso</th>
                <th scope="col" class="border-0">Uso estimado por día</th>
                <th scope="col" class="border-0">Consumo</th>
                <th scope="col" class="border-0">Costo Consumo Total</th>
                <th scope="col" class="border-0"></th>
              </tr>
            </thead>
            <tbody>
              <%for (var simulationItem of simulation.simulationItems){%>
              <tr>
                <td> <%=simulationItem.name%> </td>
                <td> <%=simulationItem.percentage%>%</td>
                <td> <%=simulationItem.useInHoursMedition%> Horas </td>
                <td> <%=simulationItem.totalConsumption%>kW </td>
                <td> $<%=simulationItem.totalCostConsumption%></td>
                </td>
              </tr>
              <%}%>
              <tr>
                  <td> <b>Costo fijo</b> </td>
                  <td> <b>-----------</b> </td>
                  <td> <b>-----------</b> </td>
                  <td> <b>-----------</b> </td>
                  <td> <b>$<%=simulation.fixedCost%></b> </td>
            </tr>
          </tbody>
          <tfoot>
                <tr>
                    <td> <b>TOTALES</b> </td>
                    <td> <b>100%</b> </td>
                    <td> <b>-----------</b> </td>
                    <td> <b><%=simulation.totalKwh%> kW</b> </td>
              <td> <b>$<%=simulation.totalCost%></b> </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>