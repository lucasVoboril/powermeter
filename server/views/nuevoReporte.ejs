<% include header.ejs %>

    <br>

    <div class="col-lg-12">
        <div class="card card-small mb-4">
            <div class="card-header border-bottom">
                <h6 class="m-0">Crear nuevo reporte</h6>
            </div>

            <form>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-3">

                        <div class="form-group ">
                            <label for="feFirstName">Nombre del reporte</label>
                            <input type="text" class="form-control" placeholder="Nombre del reporte" name="nombre">
                        </div>

                        <div class="form-group">
                            <label for="feInputState">Duracion del reporte</label>
                            <select name="duracion" id="feInputState" class="form-control">
                              <option selected="">Duracion...</option>
                              <option>1 minuto</option>
                              <option>5 minutos</option>
                              <option>15 minutos</option>
                              <option>1 hora</option>
                              <option>4 horas</option>
                              <option>24 horas</option>
                            </select>
                        </div>

                    </li>
                    <li class="list-group-item p-3">
                            <label for="feInputState">Dispositivos</label>
                    </li>

                    <li class="list-group-item p-3">
                        <button type="submit" class="btn btn-accent">Crear reporte</button>
                    </li>
                </ul>
            </form>
        </div>
    </div>
    <% include footer.ejs %>